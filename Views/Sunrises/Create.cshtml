@model MountainHoneyApp.Models.Sunrise

@{
    ViewData["Title"] = "Create";
}


<h2 class="text-center">Sunrise Estate</h2>
<div class="row form-group">
    <div class="col-md-6 col-md-offset-3" style="margin-left:300px">
        <div class="jumbotron">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control bt" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control bt" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comments" class="control-label"></label>
                <textarea asp-for="Comments" class="form-control bt"></textarea>
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdNumber" class="control-label"></label>
                <input asp-for="IdNumber" class="form-control bt" />
                <span asp-validation-for="IdNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactNumber" class="control-label"></label>
                <input asp-for="ContactNumber" class="form-control bt" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <label asp-for="Place" class="control-label"></label>
                    <input asp-for="Place" class="form-control bt" />
                    <span asp-validation-for="Place" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Method" class="control-label"></label>
                    <input asp-for="Method" class="form-control bt" />
                    <span asp-validation-for="Method" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Payment" class="control-label"></label>
                    <select asp-for="Payment" class="form-control" style="width:150px;">
                        <span asp-validation-for="Payment" class="text-danger"></span>
                        <option value="" />Choose method
                        <option value="Paid" />Paid
                        <option value="Not Paid" />Not Paid
                        <option value="Some Paid" />Some Paid
                    </select>
                </div>
            <div class="form-group">
                <label asp-for="RentAmount" class="control-label"></label>
                <input asp-for="RentAmount" class="form-control bt" />
                <span asp-validation-for="RentAmount" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <label asp-for="OldAmount" class="control-label"></label>
                    <input asp-for="OldAmount" class="form-control bt" />
                    <span asp-validation-for="OldAmount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FullAmount" class="control-label" hidden="hidden"></label>
                    <input asp-for="FullAmount" class="form-control bt" hidden="hidden" />
                    <span asp-validation-for="FullAmount" class="text-danger"></span>
                </div>
            <div class="form-group">
                <label asp-for="DateOnlyTime" class="control-label"></label>
                <input asp-for="DateOnlyTime" type="date" class="form-control bt" />
                <span asp-validation-for="DateOnlyTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
